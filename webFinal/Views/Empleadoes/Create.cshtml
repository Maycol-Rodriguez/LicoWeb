@model webFinal.Models.Empleado

@{
    ViewData["Title"] = "Create";
}

<div class="btn btn-propio">
    <a class="text-white" id="link" asp-action="Index"><</a>
</div>

<h1>Agregar Trabajador</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3|">
                <label asp-for="Idempleado" class="control-label">Dni</label>
                <input asp-for="Idempleado" class="form-control" />
                <span asp-validation-for="Idempleado" class="text-danger"></span>
            </div>
            <div class="form-group mt-3|">
                <label asp-for="NombresE" class="control-label">Nombres</label>
                <input asp-for="NombresE" class="form-control" />
                <span asp-validation-for="NombresE" class="text-danger"></span>
            </div>
            <div class="form-group mt-3|">
                <label asp-for="ApellidosE" class="control-label">Apellidos</label>
                <input asp-for="ApellidosE" class="form-control" />
                <span asp-validation-for="ApellidosE" class="text-danger"></span>
            </div>
            <div class="form-group mt-3|">
                <label asp-for="Sueldo" class="control-label"></label>
                <input asp-for="Sueldo" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3|">
                <input type="submit" value="Crear" class="btn btn-propio text-white mt-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
