@model IEnumerable<webFinal.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>
<a asp-controller="Productoes" asp-action="CatalogPro">Ver Catálogo</a>
<p>
    <a class="btn btn-propio text-white my-3" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                Producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            
            <th>
                Categoria
            </th>
            <th>
                Proveedor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                    <img src="@item.ImagenUrl1" alt="Imagen" width="200" height="200" />

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NombreProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.IdcategoriaNavigation.NombreCat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RucNavigation.NombreEmpresa)
            </td>
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Idproducto">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Idproducto">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Idproducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
