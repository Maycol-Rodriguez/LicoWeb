@model webFinal.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}

<div class="btn btn-propio">
    <a class="text-white" id="link" asp-action="Index"><</a>
</div>

<h1>Editar Empleado</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idempleado" />
            <div class="form-group">
                <label asp-for="NombresE" class="control-label"></label>
                <input asp-for="NombresE" class="form-control" />
                <span asp-validation-for="NombresE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidosE" class="control-label"></label>
                <input asp-for="ApellidosE" class="form-control" />
                <span asp-validation-for="ApellidosE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sueldo" class="control-label"></label>
                <input asp-for="Sueldo" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-propio text-white mt-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
