@model IEnumerable<webFinal.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>
<a class="btn btn-propio text-white my-3" asp-controller="Productoes" asp-action="CatalogPro">Ver Catálogo</a>
<p>
    <a class="btn btn-propio text-white my-3" asp-action="Create">Agregar Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th class="text-center">
                Producto
            </th>
            <th class="text-center">
                Precio de Venta
            </th>
            <th class="text-center">
                Stock
            </th>

            <th class="text-center">
                Categoria
            </th>
            <th class="text-center">
                Proveedor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    <img src="@item.ImagenUrl1" alt="Imagen" width="200" height="200" />
                </td>

                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.NombreProd)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>

                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.IdcategoriaNavigation.NombreCat)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.RucNavigation.NombreEmpresa)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Idproducto">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Idproducto">Detalle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Idproducto">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
