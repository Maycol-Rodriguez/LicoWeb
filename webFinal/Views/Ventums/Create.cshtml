@model webFinal.Models.Ventum

@{
    ViewData["Title"] = "Create";
}

<div class="btn btn-propio">
    <a class="text-white" id="link" asp-action="Index"><</a>
</div>

<h1>Generar Ventas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idventa" class="control-label"></label>
                <input asp-for="Idventa" class="form-control" />
                <span asp-validation-for="Idventa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <select asp-for="Dni" class ="form-control" asp-items="ViewBag.Dni"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idempleado" class="control-label"></label>
                <select asp-for="Idempleado" class ="form-control" asp-items="ViewBag.Idempleado"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-propio text-white" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
